{
    "@schema": "https://json.schemastore.org/package",
    "name": "@ndive/react-image",
    "version": "0.1.0",
    "description": "A comprehensive image utility kit for Next.js, and React. this package is created for leaning purposes. Caution is advised when using in production.",
    "main": "./dist/cjs/index.js",
    "module": "./dist/esm/index.js",
    "types": "./dist/cjs/index.d.ts",
    "exports": {
        ".": {
            "import": {
                "types": "./dist/esm/index.d.mts",
                "default": "./dist/esm/index.mjs"
            },
            "require": {
                "types": "./dist/cjs/index.d.ts",
                "default": "./dist/cjs/index.js"
            }
        },
        "./react": {
            "import": {
                "types": "./dist/esm/react.d.mts",
                "default": "./dist/esm/react.mjs"
            },
            "require": {
                "types": "./dist/cjs/react.d.ts",
                "default": "./dist/cjs/react.js"
            }
        },
        "./next": {
            "import": {
                "types": "./dist/esm/next.d.mts",
                "default": "./dist/esm/next.mjs"
            },
            "require": {
                "types": "./dist/cjs/next.d.ts",
                "default": "./dist/cjs/next.js"
            }
        },
        "./utils": {
            "import": {
                "types": "./dist/esm/utils.d.mts",
                "default": "./dist/esm/utils.mjs"
            },
            "require": {
                "types": "./dist/cjs/utils.d.ts",
                "default": "./dist/cjs/utils.js"
            }
        }
    },
    "scripts": {
        "build": "pnpm run clean && vite build --config vite.config.mts && pnpm run build:dts",
        "build:dts": "tsup --config tsup.config.mts",
        "clean": "rm -rf dist",
        "lint": "eslint '**/*.{js,jsx,ts,tsx}'",
        "lint:fix": "eslint '**/*.{js,jsx,ts,tsx}' --fix",
        "prettier": "prettier --check '**/*.{ts,tsx,js,mjs,cjs,json,yml}'",
        "prettier:fix": "prettier --write '**/*.{ts,tsx,js,mjs,cjs,json,yml}'",
        "md": "markdownlint **/*.md",
        "md:fix": "markdownlint --fix **/*.md",
        "test": "vitest run"
    },
    "keywords": [
        "image",
        "utils",
        "nestjs",
        "react",
        "filter"
    ],
    "homepage": "https://github.com/seunjin/react-image#readme",
    "bugs": {
        "url": "https://github.com/seunjin/react-image/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/seunjin/react-image.git"
    },
    "author": {
        "email": "jinseun@gmail.com",
        "name": "seunjin"
    },
    "license": "MIT",
    "packageManager": "pnpm@10.12.4",
    "dependencies": {
        "core-js-pure": "^3.44.0"
    },
    "devDependencies": {
        "@babel/plugin-transform-runtime": "^7.28.0",
        "@commitlint/cli": "^19.8.1",
        "@commitlint/config-conventional": "^19.8.1",
        "@naverpay/editorconfig": "^0.0.4",
        "@naverpay/eslint-config": "^2.3.0",
        "@naverpay/markdown-lint": "^0.0.3",
        "@naverpay/prettier-config": "^1.0.1",
        "@rollup/plugin-babel": "^6.0.4",
        "@types/node": "^24.0.14",
        "@types/react": "^19.1.8",
        "@vitejs/plugin-react-swc": "^3.10.2",
        "babel-plugin-polyfill-corejs3": "^0.13.0",
        "browserslist-to-esbuild": "^2.1.1",
        "eslint": "^9.31.0",
        "lefthook": "^1.12.2",
        "next": "^15.4.1",
        "react": "^19.1.0",
        "rollup-preserve-directives": "^1.1.3",
        "tsup": "^8.5.0",
        "typescript": "^5.8.3",
        "vite": "^7.0.5",
        "vite-tsconfig-paths": "^5.1.4",
        "vitest": "^3.2.4"
    },
    "peerDependencies": {
        "next": "^13.0.0 || ^14.0.0 || ^15.0.0",
        "react": "^18.0.0 || ^19.0.0",
        "react-dom": "^18.0.0 || ^19.0.0"
    },
    "peerDependenciesMeta": {
        "next": {
            "optional": true
        }
    }
}
